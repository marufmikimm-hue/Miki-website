    <script>
        // Array of mock posts for the feed
        const mockPosts = [
            { id: 1, user: "Alex J.", handle: "@alex_design", avatar: "bg-teal-500", time: "2h ago", text: "Just finished the first prototype of our new mobile app! The MIKI UI design language really inspired the deep purple and dark mode theme. What do you all think of the elevated card style? #MIKIUI #Prototype", likes: 45, comments: 12 },
            { id: 2, user: "Dr. Kim Lee", handle: "@dr_kim", avatar: "bg-red-500", time: "5h ago", text: "Incredibly useful session on sustainable energy solutions today. It's fascinating how quickly the public is adopting solar. Data suggests a 40% YoY increase! We need more engineers. ðŸ’¡", likes: 120, comments: 35 },
            { id: 3, user: "MIKI Creator", handle: "@miki_hq", avatar: "bg-purple-500", time: "1d ago", text: "Welcome to MIKI! We are focused on building a clean, simple, and safe space for you to share your ideas and connect with your professional community. Dive in and share your first post! âœ¨", likes: 800, comments: 210 }
        ];

        const feedElement = document.getElementById('miki-feed');
        const postInput = document.getElementById('post-input');

        // Function to create and return a single post HTML element
        function createPostElement(post) {
            const article = document.createElement('article');
            article.id = `post-${post.id}`;
            article.className = 'post-card p-6 shadow-2xl space-y-4 border-l-4 border-purple-500/80';
            
            // Post HTML structure
            article.innerHTML = `
                <!-- Post Header -->
                <div class="flex items-start justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 rounded-full ${post.avatar} flex items-center justify-center text-xl font-bold border-2 border-gray-700">${post.user[0]}</div>
                        <div>
                            <p class="font-bold text-lg">${post.user}</p>
                            <p class="text-xs text-purple-400">${post.handle} Â· ${post.time}</p>
                        </div>
                    </div>
                    <button class="text-gray-400 hover:text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path></svg>
                    </button>
                </div>

                <!-- Post Content -->
                <p class="text-gray-200 leading-relaxed whitespace-pre-wrap">${post.text}</p>

                <!-- Post Actions/Footer -->
                <div class="flex justify-between items-center text-sm text-gray-400 pt-2 border-t border-gray-700">
                    <div class="flex space-x-4">
                        <button class="flex items-center space-x-1 hover:text-red-400 transition" onclick="toggleLike(this, ${post.id})">
                            <svg class="w-5 h-5 like-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 22l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                            <span class="like-count">${post.likes}</span>
                        </button>
                        <button class="flex items-center space-x-1 hover:text-purple-400 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                            <span>${post.comments} Comments</span>
                        </button>
                    </div>
                    <span class="text-xs">Share</span>
                </div>
            `;
            return article;
        }

        // Render all mock posts
        function renderFeed() {
            feedElement.innerHTML = ''; // Clear existing feed
            mockPosts.forEach(post => {
                feedElement.appendChild(createPostElement(post));
            });
        }

        // Simple like toggle logic
        function toggleLike(button, postId) {
            const likeIcon = button.querySelector('.like-icon');
            const likeCountSpan = button.querySelector('.like-count');
            let currentLikes = parseInt(likeCountSpan.textContent);

            if (likeIcon.getAttribute('fill') === 'currentColor') {
                // Unlike
                likeIcon.setAttribute('fill', 'none');
                likeIcon.setAttribute('stroke', 'currentColor');
                currentLikes--;
            } else {
                // Like
                likeIcon.setAttribute('fill', 'currentColor');
                likeIcon.setAttribute('stroke', 'none');
                currentLikes++;
            }
            likeCountSpan.textContent = currentLikes;
        }

        // Function to handle new post creation (Mock functionality)
        function createPost() {
            const text = postInput.value.trim();
            if (text === "") {
                // Use console.log for feedback instead of alert()
                console.log("Post cannot be empty.");
                return;
            }

            const newPost = {
                id: Date.now(), // Unique ID based on timestamp
                user: "Jane Doe",
                handle: "@jane_miki",
                avatar: "bg-purple-600",
                time: "1s ago",
                text: text,
                likes: 0,
                comments: 0
            };

            // Add the new post to the beginning of the mock array
            mockPosts.unshift(newPost);
            
            // Clear input and re-render the feed
            postInput.value = '';
            renderFeed();
            
            // Simple visual confirmation
            console.log("Post created successfully!");
        }
        
        // Auto-resize textarea for post input
        postInput.addEventListener('input', function () {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        // Initialize the feed when the page loads
        document.addEventListener('DOMContentLoaded', renderFeed);
    </script>

